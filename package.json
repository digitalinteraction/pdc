{
  "name": "@openlab/pdc",
  "version": "0.2.4",
  "private": true,
  "scripts": {
    "prepare": "husky install",
    "cli": "cd server && node --loader=ts-node/esm --require=dotenv/config src/cli.ts",
    "build:server": "cd server && npx tsc",
    "build:client": "cd client && npx vue-cli-service build",
    "serve:client": "cd client && npx vue-cli-service serve",
    "serve:server": "npm -s run cli -- serve",
    "release": "standard-version && git push --follow-tags origin main"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.3",
    "@commitlint/config-conventional": "^16.2.1",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.7",
    "prettier": "^2.6.2",
    "standard-version": "^9.5.0",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.4"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "lint-staged": {
    "*.{js,json,css,md,ts,tsx}": [
      "prettier --write"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "standard-version": {
    "bumpFiles": [
      "package.json",
      "package-lock.json",
      "server/package.json",
      "client/package.json",
      "server/package-lock.json",
      "client/package-lock.json"
    ]
  }
}
